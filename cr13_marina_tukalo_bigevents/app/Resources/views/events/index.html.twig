{% extends 'base.html.twig' %}

{% block title %}INDEX{% endblock %}
{% block body %}
<div class="container my-4"> 
  <h2 class="page-header">List of all events</h2>
  <div class="row">
    {% for event in events %}
    <div class="col-sm-11 col-md-6 col-lg-4 mb-3">
      <div class="card">
        <img src="{{event.image}}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{event.name}}</h5>
          <p class="card-text">{{event.eventDateTime|date('F j, Y, g:i a')}}</p>
            <a href="/events/view/{{event.id}}" class="btn btn-outline-success">View</a>
            <a href="/events/edit/{{event.id}}" class="btn btn-outline-secondary">Edit</a>
            <a href="/events/delete/{{event.id}}" class="btn btn-danger">Delete</a>        
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
